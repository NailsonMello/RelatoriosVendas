<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".RegistroPonto.CheckIn">

    <ScrollView
        android:id="@+id/sc"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/nomePromotor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/imgPerfil"
        android:text="Nome"/>
    <View
        android:id="@+id/view"
        android:background="@color/backgroundline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nomePromotor"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/lay"
        android:layout_below="@+id/view"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/horaAtual"
            android:text="12:00"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="35dp"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="GMT -3:00 Brasília"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:background="@color/backgroundline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/view1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ultimo registro"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ultimoRegistro"
            android:layout_weight="2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="22/07/2018 - 20:25"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:background="@color/backgroundline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/nomeLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:text="Nome Loja"
        android:maxLines="1"
        android:textSize="16dp"
        android:layout_below="@+id/view2"/>

    <View
        android:id="@+id/view4"
        android:background="@color/backgroundline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nomeLoja"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_below="@+id/view4"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Localização"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/editarLoc"
            android:layout_weight="2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_editar"
            android:text="Alterar"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay3"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="3"
            android:background="@drawable/ic_location"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/localizacao"
            android:text=""
            android:layout_weight="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/sincLocal"
            android:background="@drawable/ic_autorenew_black_24dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/layou"
                android:layout_below="@+id/lay3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
        android:layout_below="@+id/lay2"
        android:id="@+id/layouteditar"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtEditarLocal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:hint="Digite seu Local..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/backgroundline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:background="@color/backgroundline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/idConfirmação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spnCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <EditText
                android:id="@+id/motivo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:textSize="20dp"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:hint="Digite o motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
            <View
                android:id="@+id/viewSpn"
                android:background="@color/backgroundline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
      <Spinner
          android:id="@+id/spnPonto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="5dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"

          />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <Button

        android:id="@+id/registrar"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:textSize="25dp"
        android:paddingLeft="80dp"
        android:paddingRight="90dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/branco"
        android:drawableLeft="@drawable/ic_registrar"
        />


</RelativeLayout>