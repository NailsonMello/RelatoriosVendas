<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".TelaVendas">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:cardElevation="4dp"
            android:layout_weight="3"
            app:cardCornerRadius="30dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/nomeVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAlignment="center"
                android:text="nome"
                android:textSize="35dp"/>
        </android.support.v7.widget.CardView>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardElevation="4dp"
                    android:layout_weight="5"
                    app:cardCornerRadius="30dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mt"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:background="#0882f4"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meta"/>

                    <TextView
                        android:id="@+id/metaVendedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:text="meta"
                        android:layout_marginTop="3dp"
                        android:textSize="30dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardElevation="4dp"
                    android:layout_weight="5"
                    app:cardCornerRadius="30dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="5"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/vd"
                                android:layout_marginTop="15dp"
                                android:textAlignment="center"
                                android:background="#0882f4"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Venda até hoje"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/realizadoVendedor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:text="realizado"
                            android:textSize="30dp"/>
                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_linear"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardElevation="4dp"
                        android:layout_weight="5"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/fb"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:background="#0882f4"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Falta para bater meta"/>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/vendafaltante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="faltante"
                        android:textSize="25dp"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardElevation="4dp"
                        android:layout_weight="5"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/vdi"
                                    android:layout_marginTop="15dp"
                                    android:textAlignment="center"
                                    android:background="#0882f4"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Venda dia"/>

                            </RelativeLayout>
                            <TextView
                                android:id="@+id/vendadia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:textAlignment="center"
                                android:text="venda dia"
                                android:textSize="30dp"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardElevation="4dp"
                        android:layout_weight="5"
                        app:cardCornerRadius="30dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/du"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:background="#0882f4"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dias ùteis"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/diasuteis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:text="dias"
                        android:textSize="25dp"/>
                    </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:background="#0882f4"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Porgresso da venda"/>
                    <ImageView
                        android:layout_marginTop="6dp"
                        android:layout_width="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/texto"
                    android:textSize="18dp"
                    android:textColor="#f40202"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:background="#d9c9c9"
                    android:layout_centerHorizontal="true"
                    android:scrollbarSize="10dp"
                    android:layout_marginBottom="10dp"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:id="@+id/progress"/>

            </LinearLayout>
            <TextView
                android:layout_below="@+id/layout_linear"
                android:visibility="gone"
                android:id="@+id/txtMecanica"
                android:text=""
                android:padding="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/imgFinalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/finalizada"/>

    </RelativeLayout>
</ScrollView>